<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
           http://www.springframework.org/schema/beans
           https://www.springframework.org/schema/beans/spring-beans.xsd">

<bean id="newDatabaseProvider"
      class="org.example.iocoupling.NewDatabaseProvider"/>

    <bean id ="userDatabaseProvider"
          class="org.example.iocoupling.UserDatabaseProvider"/>

    <bean id ="webServiceDataProvider"
          class="org.example.iocoupling.WebServiceDataProvider"/>
    <bean id ="userManagerWithNewDatabaseProvider"
          class="org.example.iocoupling.UserManager">
        <constructor-arg ref="newDatabaseProvider"/>
    </bean>
    <bean id="userManagerWithUserDatabaseProvider"
          class="org.example.iocoupling.UserManager">
        <constructor-arg ref="userDatabaseProvider"/>
    </bean>
    <bean id="userManagerWithWebServiceDataProvider"
          class="org.example.iocoupling.UserManager">
        <constructor-arg ref="webServiceDataProvider"/>
    </bean>
</beans>

